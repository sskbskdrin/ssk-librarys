<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/main_theme">
        <!-- Customize your theme here. -->
    </style>

    <style name="main_base" parent="Theme.AppCompat.Light.NoActionBar" />

    <declare-styleable name="SwipeLayout_Layout">
        <attr name="swipe_isContentView" format="boolean" />
        <attr name="swipe_inParentPosition">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="android:layout_gravity" />
    </declare-styleable>
</resources>
