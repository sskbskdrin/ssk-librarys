<?xml version="1.0" encoding="utf-8"?>
<cn.sskbskdrin.widget.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:swipe_isContentView="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/zoom_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/scroll_text"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="#d54"
                android:gravity="center"
                android:text="I am a TextView,in the scroll"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:background="#d24"
                android:gravity="center"
                android:text="I am a TextView"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:background="#d24"
                android:gravity="center"
                android:text="I am a TextView"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="#da4"
                android:gravity="center"
                android:text="I am a TextView"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>
    </ScrollView>

    <cn.sskbskdrin.widget.swipe.refresh.RefreshView
        android:id="@+id/list_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:swipe_inParentPosition="top" />
</cn.sskbskdrin.widget.swipe.SwipeLayout>